<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
    </style>
    
    <!-- Blue ActionBar theme -->
    <style name="BlueActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#245B99</item>
    </style>
    
    <!--  Star button -->
    <style name="StarButton_Style" parent="@android:style/Widget.CompoundButton">  
        <item name="android:background">@drawable/starbutton</item>
        <item name="android:textOff"></item>
   		<item name="android:textOn"></item>
    </style>
    
    <style name="ProfileItemTitleStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:id">@id/profile_item_title</item>
		<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">-Title-</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="ProfileItemLayoutStyle">
        <item name="android:id">@id/profile_item_layout</item>
        <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:divider">@drawable/divider_horizontal</item>
	    <item name="android:orientation">vertical</item>
	    <item name="android:showDividers">middle</item>
    </style>
    <style name="ProfileItemEditTextStyle">
        <item name="android:id">@id/profile_edit_value</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:freezesText">false</item>
    </style>
    <style name="ProfileItemViewTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:id">@id/profile_view_value</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">none</item>
        <item name="android:background">@drawable/profile_view_item_selector</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:text">@string/placeholder</item>
    </style>


</resources>
